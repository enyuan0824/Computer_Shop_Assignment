<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".verify_password_page">

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Forgot Password"
        android:textAlignment="center"
        android:layout_marginTop="200dp"
        android:textSize="45dp"
        android:textColor="@color/puplre"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textView11"
        android:layout_width="306dp"
        android:layout_height="47dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:fontFamily="monospace"
        android:text="Fill up the email and we will send you a new password"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/editTextTextEmailAddress"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:hint="Email"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="55dp" />

    <Button
        android:id="@+id/buttonSubmitEmail"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="40dp"
        android:background="#504099"
        android:text="SUBMIT"
        android:textColor="@color/white"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/textViewBackToLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back To Login"
        android:textColor="@color/grey"
        android:textStyle="bold"
        android:textAlignment="center"
        android:fontFamily="monospace"
        android:textSize="15dp"
        android:layout_marginTop="10dp"/>

</LinearLayout>